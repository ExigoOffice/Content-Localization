@using System.Globalization
@using System.Threading
@using System.Web.UI.WebControls


@model WebSite.AspNetFramework.Models.SomeModel

@{
    ViewBag.Title = "Index";
}
<br />
@Html.DropDownListFor(
    model => Model.Languages, 
    Model.Languages.Select(m=> new SelectListItem{ Value = m.Value, Text = m.Text}
        ).ToList())

@Html.Raw(Resources.CDEN.MainPageThing)
@Thread.CurrentThread.CurrentUICulture.Name

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<script>

    jQuery(document).ready(function() {

        var sel = '@Request["l"]';

        if (sel == "") sel = "en-US";

        jQuery('#Languages').val(sel);

        jQuery('#Languages').change(function(o) {
            var p=String(window.location).split('?');
            window.location = p[0]+ "?l=" + jQuery('#Languages').val();

        });
    });


</script>